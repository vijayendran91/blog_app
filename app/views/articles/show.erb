<article class="detail-article">
  <h1 class="article-detail-title"><%= @article.title %></h1>
  <div clas="glyphicon glyphicon-calander" id="article-date">
    <%= @article.created_at.strftime("%b %d %y") %>
  </div>
  <div class="article-body">
    <%= @article.body %>
  </div>
  <div class="edit-delete">
    <%= link_to "Edit Article", edit_article_path(@article), class: " btn btn-primary btn-lg btn-space" %>
    <%= link_to "Delete Article", article_path(@article), method: :delete, data: {confirm: "Are you sure you wanna delete the article ?"},
                class: "btn btn-primary btn-lg btn-space" %>
  </div>
</article>